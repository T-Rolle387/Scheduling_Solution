<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="80.0" prefWidth="1200.0">
         <children>
            <Label text="Appointment Scheduling System">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
               <HBox.margin>
                  <Insets right="15.0" top="15.0" />
               </HBox.margin>
               <padding>
                  <Insets left="15.0" />
               </padding>
            </Label>
            <HBox maxWidth="-Infinity" prefHeight="350.0" prefWidth="600.0" />
         </children>
      </HBox>
      <HBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="50.0" prefWidth="540.0">
         <children>
            <Label text="Appointments:">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <padding>
                  <Insets left="15.0" />
               </padding>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <HBox prefHeight="60.0" prefWidth="387.0">
               <children>
                  <RadioButton mnemonicParsing="false" selected="true" text="All">
                     <padding>
                        <Insets left="10.0" top="8.0" />
                     </padding>
                     <toggleGroup>
                        <ToggleGroup fx:id="apptView" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton mnemonicParsing="false" text="Current Month" toggleGroup="$apptView">
                     <padding>
                        <Insets left="10.0" top="8.0" />
                     </padding>
                  </RadioButton>
                  <RadioButton mnemonicParsing="false" text="Current Week" toggleGroup="$apptView">
                     <padding>
                        <Insets left="10.0" top="8.0" />
                     </padding>
                  </RadioButton>
               </children>
            </HBox>
         </children>
      </HBox>
      <HBox maxWidth="-Infinity" prefHeight="350.0" prefWidth="650.0">
         <children>
            <TableView prefHeight="350.0" prefWidth="650.0">
              <columns>
                <TableColumn prefWidth="42.0" text="ID" />
                <TableColumn prefWidth="116.0" text="Title" />
                  <TableColumn prefWidth="106.0" text="Description" />
                  <TableColumn prefWidth="75.0" text="Location" />
                  <TableColumn prefWidth="75.0" text="Contact" />
                  <TableColumn prefWidth="75.0" text="Type" />
                  <TableColumn prefWidth="75.0" text="Start" />
                  <TableColumn prefWidth="75.0" text="Customer ID" />
              </columns>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </TableView>
         </children>
      </HBox>
      <HBox alignment="TOP_RIGHT" maxWidth="-Infinity" prefHeight="100.0" prefWidth="600.0">
         <children>
            <Button mnemonicParsing="false" text="Button">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" text="Button">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" text="Button" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets top="30.0" />
         </padding>
      </HBox>
   </children>
</VBox>
